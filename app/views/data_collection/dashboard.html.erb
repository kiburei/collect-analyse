<div class="row dash">
  <div id="side-nav" class="col s2">
    <ul>
      <li>Internet Stats</li>
      <li>Mobile Stats</li>
      <li>Facebook Stats</li>
      <li>Twitter Stats</li>
      <li>Instagram Stats</li>
    </ul>
  </div>

  <div class="col s10 charts">

          <!-- Internet -->
          <div class="card">
            <div class="row">
              <div class="col s3">
                <% report = @reports.where(medium: 'Internet').last %>
                <h5><%= report.title %></h5> by <%= report.author %>
                <p><%= report.body.split[0..40].join(" ") %>
                <a class="modal-trigger" href="#report-internet">continue reading</a></p></br>
                <!-- report modal -->
                  <div id="report-internet" class="modal bottom-sheet">
                   <div class="modal-content">
                     <p><%= report.body.split[41..1000].join(" ") %></p>
                   </div>
                   <div class="modal-footer">
                     <a href="#!" class="modal-action modal-close waves-effect waves-green btn-flat">Close</a>
                   </div>
                 </div>
                 <!-- End report -->
                <%= link_to "add_circle", new_report_path('Internet'), class: 'material-icons' %>
                <%= link_to "edit", edit_report_path(report), class: 'material-icons' %>
                <%= link_to "archive", internet_users_download_path, class: 'material-icons' %>
                <%= link_to "insert_chart", internet_users_download_path, class: 'material-icons' %>
                <%= social_share_button_tag(report.title) %>
              </div>
              <div class="col s9">
                <div class="chart">
                  <%= area_chart data_collection_internet_user_path, download: true, title: "Internet Trends", xtitle: "Year", ytitle: "Hits" %>
                  <div class="chart-actions">
                    <span class="source-url">Sources: </span>
                    <% @sources.each do |s| %>
                      <%if s.medium == "Internet" %>
                          <span class="source-url"><%= link_to s.name, s.link, target: '_blank' %></span>
                      <% end %>
                    <% end %>
                    <%= link_to "add_circle", new_source_path('Internet'), class: 'material-icons' %>
                  </div>
                </div>
              </div>
            </div>


          </div>
  </div>

</div>
